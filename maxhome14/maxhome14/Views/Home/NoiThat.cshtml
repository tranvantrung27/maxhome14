@{
    ViewData["Title"] = "Nội thất";
}

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="page-title font-poppins" data-aos="fade-up">
                    Nội thất
                </h1>
                <p class="page-subtitle" data-aos="fade-up" data-aos-delay="100">
                    Thiết kế nội thất hiện đại và sang trọng
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Development Notice -->
<section class="development-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="development-card" data-aos="fade-up">
                    <div class="development-icon">
                        <i class="fas fa-couch"></i>
                    </div>
                    <h2 class="development-title font-poppins">Trang đang được phát triển</h2>
                    <p class="development-description">
                        Chúng tôi đang hoàn thiện nội dung cho trang "Nội thất". 
                        Trang này sẽ bao gồm:
                    </p>
                    <ul class="development-features">
                        <li><i class="fas fa-check text-gold"></i> Mẫu nội thất đa dạng</li>
                        <li><i class="fas fa-check text-gold"></i> Thiết kế phòng khách, phòng ngủ</li>
                        <li><i class="fas fa-check text-gold"></i> Nội thất văn phòng</li>
                        <li><i class="fas fa-check text-gold"></i> Tư vấn và thi công nội thất</li>
                    </ul>
                    <div class="development-actions">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i>
                            Về trang chủ
                        </a>
                        <a href="@Url.Action("LienHe", "Home")" class="btn btn-secondary">
                            <i class="fas fa-phone"></i>
                            Liên hệ tư vấn
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Nội thất page loaded - Đang phát triển');
        });
    </script>
}
